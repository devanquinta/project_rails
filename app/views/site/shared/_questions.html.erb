<!-- Main component for a primary marketing message or call to action -->

<div class="jumbotron">
  <h5><%= msg_jumbotron %></h5>
<!--  msg_jumbotron - Últimas perguntas cadastradas...-->
</div>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
    <div>
      <p style="color: #730E15">Estou em  shared/_question.html.erb também as questões - apagar</p>
      <div>
        <p>
          <span class="label label-info" style="margin-right: 10px;">
            <%= link_to "#{question.subject.description} (#{question.subject.questions_count})", site_search_subject_path(question.subject_id, question.subject.description), style:"color: white;font-weight: bold;" %>
          </span>
          <%= sanitize question.description %>
        </p>
      </div>
      <div style="height: 250px">
        <ul>
          <% question.answers.each do |answer| %>
            <li style="list-style:none;" >
              <div class="radio">
                <label>
                  <%= radio_button_tag 'answer_id', answer.id %>
                  <%= answer.description %>
                </label>
              </div>
            </li>
          <% end %>
          <br>
          <li style="list-style:none;">
            <%= form.submit "Responder", class:"btn btn-dark", id: "submit_#{question.id}" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <div class="text-center">
    <%= paginate @questions %>
  </div>
<% else %>
  <div class="alert alert-warning" role="alert">
    <p>Efetue login para poder continuar respondendo as questões...</p>
  </div>
<% end %>